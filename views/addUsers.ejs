<%- include ("includes/_header") %>

<div class="center">
    <div class="form-container">
        <header>
            <h4>Register User</h4>
        </header>
       <form action="/api/user" method="post">
           <div class="form-group mb-3">
               <label for="">Name</label>
               <input type="text" name="name" id="" class="form-control" placeholder="John Doe">
           </div>
           <div class="form-group mb-3">
            <label for="">Email</label>
            <input type="text" name="email" id="" class="form-control" placeholder="Example@gmail.com">
           </div>
           <div class="form-group mb-3">
               <label for="gender">Gender</label>
               <div class="radio inline">
                   <input type="radio" name="gender" id="" value="Male">
                   <label for="gender">Male</label>
               </div>
               <div class="radio inline">
                <input type="radio" name="gender" id="" value="Female">
                <label for="gender">Female</label>
            </div>
           </div>
           <div class="form-group mb-3">
            <label for="status">Status</label>
            <div class="radio inline">
                <input type="radio" name="status" id="" value="Active">
                <label for="status">Active</label>
            </div>
            <div class="radio inline">
             <input type="radio" name="status" id="" value="Inactive">
             <label for="status">Inactive</label>
         </div>
           </div>
           <div class="form-group mb-3">
               <input type="submit" value="Add User" class="btn btn-success"id="btn">
           </div>
       </form>
    </div>
</div>

<%- include ("includes/_footer") %>