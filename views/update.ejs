<%- include ("includes/_header") %>

<div class="center">
    <div class="form-container">
        <header>
            <h4>Update User</h4>
        </header>
       <form id="updateform" method="post">
           <div class="form-group mb-3">
               <label for="">Name</label>
               <input type="hidden" name="id" value="<%= user._id %> ">
               <input type="text" name="name" id="" class="form-control" placeholder="John Doe" value= "<%= user.name %>">
           </div>
           <div class="form-group mb-3">
            <label for="">Email</label>
            <input type="text" name="email" id="" class="form-control" placeholder="Example@gmail.com" value= "<%= user.email %>">
           </div>
           <div class="form-group mb-3">
               <label for="gender">Gender</label>
               <div class="radio inline">
                   <input type="radio" name="gender" id="" value="Male" <%= user.gender=="Male"? 'checked':'' %> >
                   <label for="gender">Male</label>
               </div>
               <div class="radio inline">
                <input type="radio" name="gender" id="" value="Female"  <%= user.gender=="Female"? 'checked':'' %>>
                <label for="gender">Female</label>
            </div>
           </div>
           <div class="form-group mb-3">
            <label for="status">Status</label>
            <div class="radio inline">
                <input type="radio" name="status" id="" value="Active"  <%= user.status=="Active"? 'checked':'' %>>
                <label for="status">Active</label>
            </div>
            <div class="radio inline">
             <input type="radio" name="status" id="" value="Inactive" <%= user.status=="Inactive"? 'checked':'' %>>
             <label for="status">Inactive</label>
         </div>
           </div>
           <div class="form-group mb-3">
               <input type="submit" value="Save user" class="btn btn-success"id="btn">
           </div>
       </form>
    </div>
</div>

<%- include ("includes/_footer") %>